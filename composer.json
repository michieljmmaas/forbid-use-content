{
  "name": "moxio/psalm-plugin-unsafe-get-contents",
  "description": "Psalm plugin to detect unsafe getContents() calls on PSR-7 StreamInterface",
  "type": "psalm-plugin",
  "license": "MIT",
  "authors": [
    {
      "name": "Michiel Maas",
      "email": "michieljmmaas@gmail.com"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "vimeo/psalm": "^4.0 || ^5.0 || dev-master",
    "psr/http-message": "^1.0 || ^2.0",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.5",
    "squizlabs/php_codesniffer": "^3.3",
    "weirdan/prophecy-shim": "^2.0",
    "weirdan/codeception-psalm-module": "dev-master",
    "codeception/codeception": "^5.0",
    "psalm/plugin-phpunit": "^0.16.0"
  },
  "extra": {
    "psalm": {
      "pluginClass": "Moxio\\PsalmPlugin\\Plugin"
    }
  },
  "autoload": {
    "psr-4": {
      "Moxio\\PsalmPlugin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Weirdan\\PsalmPluginSkeleton\\Tests\\": [
        "tests/_support",
        "tests"
      ],
      "Weirdan\\Codeception\\Psalm\\": "vendor/weirdan/codeception-psalm-module/src/"
    }
  },
  "scripts": {
    "check": [
      "@analyze",
      "@cs-check",
      "@unit-tests",
      "@acceptance-tests"
    ],
    "analyze": "codecept build && psalm",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "unit-tests": "phpunit --colors=always",
    "acceptance-tests": "codecept build && codecept --ansi run acceptance"
  }
}
